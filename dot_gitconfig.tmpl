[user]
	name = {{ .name }}
	email = {{ .email }}
[core]
	editor = nvim
[init]
	defaultBranch = main
[merge]
  conflictstyle = diff3
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true
# `git dlog` to show `git log -p` with difftastic.
[alias]
  dlog = "!f() { GIT_EXTERNAL_DIFF=difft git log -p --ext-diff; }; f"
[credential]
  helper = store
[include]
  path = /home/vhxubo/.config/gitalias/gitalias.txt
